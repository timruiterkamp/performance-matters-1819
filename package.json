  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.2",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "2.1.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "2.5.2",
    "gulp-cssnano": "^2.1.3",
    "gulp-minify-css": "1.0.0",
    "gulp-plumber": "1.0.0",
    "gulp-rename": "1.2.2",
    "gulp-uglify": "1.2.0",
    "gulp-useref": "^3.1.6",
    "handlebars": "^4.1.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "snoowrap": "^1.15.2"
  },
  "scripts": {
    "start": "concurrently \"yarn build\" \"node_modules/.bin/nodemon server\"",
    "build": "concurrently \"yarn minify-scss\" \"yarn minifyjs\" \"yarn move\"",
    "watch": "concurrently \"yarn run sass-watch\" \"yarn minifyjs\"",
    "clean": "node_modules/.bin/gulp clean",
    "move": "node_modules/.bin/gulp move",
    "minifyjs": "node_modules/.bin/gulp minifyJS",
    "sass": "node_modules/.bin/node-sass --include-path scss sass/index.scss dist/styles/min-main.css",
    "minify-scss": "node_modules/.bin/node-sass --include-path scss sass/index.scss dist/styles/min-main.css --output-style compressed",
    "sass-watch": "node_modules/.bin/nodemon -e scss -x npm run sass"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
